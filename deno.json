{
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 120,
      "proseWrap": "always",
      "semiColons": true,
      "singleQuote": false,
      "useTabs": false
    },

    "include": ["**/*.ts", "**/*.json"],
    "exclude": ["node_modules", "vendor"]
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-namespace",
        "no-explicit-any",
        "no-empty-interface",
        "no-empty",
        "ban-types"
      ]
    }
  },
  "vendor": true,
  "workspace": {
    "members": [
      "apps/plugin",
      "apps/server"
    ]
  }
}
