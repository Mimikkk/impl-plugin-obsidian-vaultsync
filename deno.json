{
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 120,
      "proseWrap": "always",
      "semiColons": true,
      "singleQuote": false,
      "useTabs": false
    },
    "exclude": ["node_modules", "vendor"]
  },
  "lint": {
    "rules": {
      "exclude": ["no-namespace", "no-explicit-any", "no-empty-interface", "no-empty", "ban-types"]
    }
  },
  "tasks": {
    "dev": {
      "description": "Run the development server",
      "command": "deno run -A --env-file=.env --watch ./src/server.ts"
    },
    "server": {
      "description": "Run the production server",
      "command": "deno run -A --env-file=.env ./src/server.ts"
    }
  },
  "vendor": true
}
